@model TokyoFashion.Models.SanPham
@{
    ViewBag.Title = "XoaSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutBE.cshtml";
}

<style>
    .btn-r a {
        text-decoration: none;
        color: white;
    }
    .btn-right {
        float: right;
    }
</style>

<div id="content" class="bg-container">
    <header class="head">
        <div class="main-bar">
            <div class="row no-gutters">
                <div class="col-lg-6 col-md-4 col-sm-4">
                    <h4 class="nav_top_align">
                        <i class="fa fa-th"></i>
                        Danh Mục
                    </h4>
                </div>
                <div class="col-lg-6 col-md-8 col-sm-8">
                    <ol class="breadcrumb float-right nav_breadcrumb_top_align">
                        <li class="breadcrumb-item">
                            <a href="index1.html">
                                <i class="fa fa-home" data-pack="default" data-tags=""></i> Admin
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#">Sản Phẩm</a>
                        </li>
                        <li class="breadcrumb-item active">Danh Sách Sản Phẩm</li>
                    </ol>
                </div>
            </div>
        </div>
    </header>
    <div class="outer">
        <div class="inner bg-container">
            <div class="row">
                <div class="col-12 data_tables">
                    <div class="card">
                        <div class="card-header bg-white">
                            <i class="fa fa-table"></i> Chi Tiết Sản Phẩm
                        </div>

                        <table class="table">
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.MaSP)
                                </td>

                                <td>
                                    @Html.DisplayFor(model => model.MaSP)
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.TenSP)
                                </td>

                                <td>
                                    @Html.DisplayFor(model => model.TenSP)
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.DanhMucSP.TenDanhMuc)
                                </td>

                                <td>
                                    @Html.DisplayFor(model => model.DanhMucSP.TenDanhMuc)
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.TenThuongHieu)
                                </td>

                                <td>
                                    @Html.DisplayFor(model => model.TenThuongHieu)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.MauSac.TenMau)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.MauSac.TenMau)
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.Anh)
                                </td>

                                <td>
                                    @Html.DisplayFor(model => model.Anh)
                                </td>

                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.GiaGoc)
                                </td>

                                <td>
                                    @Html.DisplayFor(model => model.GiaGoc)
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.MoTa)
                                </td>

                                <td>
                                    @Html.DisplayFor(model => model.MoTa)
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.SoLuong)
                                </td>

                                <td>
                                    @Html.DisplayFor(model => model.SoLuong)
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    @Html.DisplayNameFor(model => model.KhuyenMai)
                                </td>

                                <td>
                                    @Html.DisplayFor(model => model.KhuyenMai)
                                </td>
                            </tr>

                        </table>


                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <table class="btn-right">
                                <tr>
                                    <td>
                                        <div class="col-md-offset-2 col-md-1">
                                            <input type="submit" value="Delete" class="btn btn-primary" />
                                        </div>
                                    </td>
                                    <td>
                                        <div class="btn btn-primary button-right">@Html.ActionLink("Huỷ", "DanhSachSP")</div>
                                    </td>
                                </tr>
                            </table>
                            <div class="form-actions no-color">
                                
                            </div>
                        }
                    </div>


                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="search_modal" tabindex="-1" role="dialog" aria-hidden="true">
        <form>
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span class="float-right" aria-hidden="true">&times;</span>
                    </button>
                    <div class="input-group search_bar_small">
                        <input type="text" class="form-control" placeholder="Search..." name="search">
                        <span class="input-group-btn">
                            <button class="btn btn-secondary" type="submit"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

