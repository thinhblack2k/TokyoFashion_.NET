@model TokyoFashion.Models.SanPham
@{
    ViewBag.Title = "ChiTietSP";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutBE.cshtml";
}
<style>
    .pagination li {
        width: 30px;
        height: 30px;
        border: 2px solid #333;
        border-radius: 50%;
        margin: 0 5px;
        position: relative;
    }

    .pagination .active {
        background-color: #333;
        color: #fff;
        border: 1px solid #fff;
    }

    .pagination li a {
        font-size: 15px;
        color: #333;
        position: absolute;
        padding: 10px;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
    }

    .btnSearch {
        background: #fff;
        border: none;
    }

    .button-right {
        float: right;
        padding: 10px;
    }

        .button-right a {
            text-decoration: none;
            color: white;
        }

    .imgtitle {
        width: 500px;
        height: 500px;
        margin: auto;
        object-fit: cover;
    }

        .imgtitle img {
            width: 100%;
        }
        .w70 {
            width: 60%;
            margin: 0 auto;
        }
</style>

<div id="content" class="bg-container">
    <header class="head">
        <div class="main-bar">
            <div class="row no-gutters">
                <div class="col-lg-6 col-md-4 col-sm-4">
                    <h4 class="nav_top_align">
                        <i class="fa fa-th"></i>
                        Danh Mục
                    </h4>
                </div>
                <div class="col-lg-6 col-md-8 col-sm-8">
                    <ol class="breadcrumb float-right nav_breadcrumb_top_align">
                        <li class="breadcrumb-item">
                            <a href="index1.html">
                                <i class="fa fa-home" data-pack="default" data-tags=""></i> Admin
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#">Sản Phẩm</a>
                        </li>
                        <li class="breadcrumb-item active">Danh Sách Sản Phẩm</li>
                    </ol>
                </div>
            </div>
        </div>
    </header>
    <div class="outer">
        <div class="inner bg-container">
            <div class="row">
                <div class="col-12 data_tables">
                    <div class="card">
                        <div class="card-header bg-white">
                            <i class="fa fa-table"></i> Chi Tiết Sản Phẩm
                        </div>

                        <div class="imgtitle">
                            <img src="@Url.Content("~/assets/img/product/" + @Html.DisplayFor(model => model.Anh))">
                        </div>

                        <p class="mt-3 mb-3 text-center w70">@Html.DisplayFor(model => model.MoTa)</p>
                        <table class="table table-bordered table-hover mt-5 mb-5 text-center detail_table">
                            <tbody>
                                <tr>
                                    <td scope="row">Mã Sản Phẩm</td>
                                    <td>@Html.DisplayFor(model => model.MaSP)</td>
                                </tr>
                                <tr>
                                    <td scope="row">Tên sản phẩm</td>
                                    <td>@Html.DisplayFor(model => model.TenSP)</td>
                                </tr>
                                <tr>
                                    <td scope="row">Màu Sắc</td>
                                    <td>@Html.DisplayFor(model => model.MauSac.TenMau)</td>
                                </tr>
                                <tr>
                                    <td scope="row">Danh mục</td>
                                    <td>@Html.DisplayFor(model => model.DanhMucSP.TenDanhMuc)</td>
                                </tr>
                                <tr>
                                    <td scope="row">Thương hiệu</td>
                                    <td>@Html.DisplayFor(model => model.TenThuongHieu)</td>
                                </tr>
                                <tr>
                                    <td scope="row">Số Lượng</td>
                                    <td>@Html.DisplayFor(model => model.SoLuong)</td>
                                </tr>
                                <tr>
                                    <td scope="row">Giá Gốc</td>
                                    <td>@Html.DisplayFor(model => model.GiaGoc)</td>
                                </tr>
                                <tr>
                                    <td scope="row">Khuyến Mại</td>
                                    <td>@Html.DisplayFor(model => model.KhuyenMai)</td>
                                </tr>


                                <tr>
                                    <td></td>
                                    <td><div style="margin: 15px;" class="btn btn-primary button-right">@Html.ActionLink("Quay lại", "DanhSachSP")</div> <div style="margin: 15px;" class="btn btn-primary button-right">@Html.ActionLink("Sửa Sản Phẩm", "SuaSanPham", new { @MaSP = Model.MaSP })</div></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>


                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="search_modal" tabindex="-1" role="dialog" aria-hidden="true">
        <form>
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span class="float-right" aria-hidden="true">&times;</span>
                    </button>
                    <div class="input-group search_bar_small">
                        <input type="text" class="form-control" placeholder="Search..." name="search">
                        <span class="input-group-btn">
                            <button class="btn btn-secondary" type="submit"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

